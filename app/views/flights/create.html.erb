<%= form_tag create_path, method: 'get' do %>
<div class="wrapper">
  <div class="container">
      <h3>Create Flight</h3>
    <div class="row center">
      <%= hidden_field_tag :create %>
      <div class="input-field col s6">
        <%= select_tag :from, options_for_select(session['airports']),  prompt: "From" %>
      </div>
      <div class="input-field col s6">
        <%= select_tag :to, options_for_select(session['airports']), prompt: "To" %>
        </div>
      <div class="input-field col s6">
        <%= select_tag :dept_date, options_for_select(session['departure_date']), prompt: "Departure Date" %>
      </div>
      <div class="input-field col s6">
        <%= select_tag :arr_date, options_for_select(session['arrival_date']), prompt: "Arrival Date" %>
      </div>
      <div class="input-field col s6">
        </div>
      <div class="row center">
        <%= submit_tag "Create", :name => nil, class: "btn-large blue" %>
      </div>
    </div>
  </div>
</div>
    <% end %>