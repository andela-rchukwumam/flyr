<%= form_tag new_booking_path, method: 'get' do %>
  <div class="row">
  <table>
  <thead>
    <tr>
      <th>Select</th>
      <th>Flight #</th>
      <th>Date</th>
      <th>Departs</th>
      <th>From</th>
      <th>To</th>
      <th>Time</th>
    </tr>
  </thead>

    <% @flights.each do |flight| %>
      <tbody>
        <tr>
          <td><%= radio_button_tag :flight_id, flight.id %></td>
          <td><%= flight.id %></td>
          <td><%= flight.flight_date.strftime("%B %d, %Y")  %></td>
          <td><%= flight.flight_date.strftime('%I:%M:%S %p') %></td>
          <td><%= flight.dept_id.name %></td>
          <td><%= flight.arr_id.name %></td>
          <td><%= flight.flight_time %></td>
        </tr>      
      </tbody>
    <% end %>
    </table>
    <%= submit_tag "Select Flight", :name => nil, class: "button" %>
    <%= hidden_field_tag :passengers, params[:passengers] %>

  </div>
<% end %>