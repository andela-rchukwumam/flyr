<%= form_tag '/bookings', method: 'get' do %>
  <div class="row">
  <table>
  <thead>
    <tr>
      <th>Select</th>
      <th>Flight #</th>
      <th>Departure Date</th>
      <th>Arrival Date</th>
      <th>From</th>
      <th>To</th>
      <th>Time</th>
      <th>Price</th>
    </tr>
  </thead>

    <% @flights.each do |flight| %>
      <tbody>
        <tr>
          <td><%= radio_button_tag :flight_id, flight.id, class: "ruth-radio", params[:flight_id] %></td>
          <td><%= flight.id %></td>
          <td><%= flight.departure_date.strftime("%B %d, %Y")  %></td>
          <td><%= flight.arrival_date.strftime("%B %d, %Y") %></td>
          <td><%= flight.departure.name %></td>
          <td><%= flight.arrival.name %></td>
          <td><%= flight.flight_time %></td>
          <td>$<%= flight.price %></td>
        </tr>      
      </tbody>
    <% end %>
    </table>
    <%= hidden_field_tag :passengers, params[:passengers] %>
    <%= hidden_field_tag :flight_id, params[:flight_id] %>
    <%= hidden_field_tag :user_id, value: current_user.id, params[:user_id] %>
    <%= submit_tag "Select Flight", :name => nil, class: "btn-large blue" %>
  </div>
<% end %>